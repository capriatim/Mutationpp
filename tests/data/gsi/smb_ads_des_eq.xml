<gsi gsi_mechanism = "detailed_mass">

    <surface_properties type = "detailed" steady_coverage = "false">
        <site label = "s" sites_per_m2 = "1.e20" species = "O" />
    </surface_properties>

    <surface_chemistry>
        <!-- Adsorption of O Atoms -->
        <reaction type="detailed" formula="O + s => O-s">
            <adsorption stick_coef = "1."  T = "0." />
        </reaction>

        <!-- Thermal Desorption of O Atoms -->
        <reaction type="detailed" formula="O-s => O + s">
            <desorption_tst T = "1.e+05"/>
        </reaction>
    </surface_chemistry>
</gsi>